<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/sejong_logo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/sejong_logo"/>

    <EditText
        android:id="@+id/name_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp"
        android:background="#AADCDCDC"
        android:drawableLeft="@drawable/ic_action_name"
        android:inputType="text"
        android:hint=" Name"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/name_text"
        android:layout_alignEnd="@+id/name_text"
        android:layout_alignLeft="@+id/name_text"
        android:layout_alignRight="@+id/name_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:background="#AADCDCDC"
        android:drawableLeft="@drawable/ic_action_password"
        android:inputType="textPassword"
        android:hint=" Password"
        android:textSize="16dp" />

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        app:cardBackgroundColor="@color/buttonColor"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/buttonColor"
                android:text="Login"
                android:textSize="30sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/remainingCount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FFFFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="@string/remainingText"
        android:visibility="invisible"/>
</RelativeLayout>